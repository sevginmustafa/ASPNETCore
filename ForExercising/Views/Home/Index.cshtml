@inject IGetUsersCountService GetUsersCountService
@model ForExercising.ViewModels.UserRegisterFormViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @ViewBag.ProjectName</h1>
    <p>@ViewData["Message"]: @ViewData["Time"]</p>
    <p>Current users count: @GetUsersCountService.GetCount()</p>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


@section Links{
    <a href="https://youtube.com">YouTube</a>
}

